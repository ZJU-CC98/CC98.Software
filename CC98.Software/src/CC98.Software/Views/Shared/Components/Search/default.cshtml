    <div id="search-soft" style="border:1px solid #bfbfbf;margin-top:5px;margin-bottom:5px;padding:10px;padding-left:10px;">

        <form asp-controller="Home" asp-action="Search">

            <input asp-for="Content" type="search" id="search" placeholder="输入关键词搜索吧" />

