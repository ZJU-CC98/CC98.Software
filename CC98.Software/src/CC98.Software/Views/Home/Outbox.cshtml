  @model Sakura.AspNetCore.IPagedList<Feedback>
<a asp-controller="home" asp-action="MessageBox">发邮件</a><a asp-controller="Home" asp-action="Inbox">收件箱</a><a asp-controller="Home" asp-action="Outbox">发件箱</a>

<div id="messageslist" class="col-md-6">
<div id="sendMessage" class="row">
    <div class="col-md-10">
        <h3 style="text-align: center">发件箱</h3>
        <div class="row">
            <div class="col-md-9">
                    <div class="row">
                        <h4>标题</h4>
                        @foreach (var i in Model)
                        {
                            if (i.SenderName == User.Identity.Name)
                            {
                                <div class="row">
                                    <label style="overflow:hidden;text-overflow:ellipsis" for="exampleInputEmail1">@i.Title</label>
                                </div> }
                        }
                    </div>

            </div>
            <div class="col-md-3">
       
                    <div class="row">
                        <h4>收件人</h4>
                        @foreach (var i in Model)
                        {
                            if (i.SenderName == User.Identity.Name)
                            {
                                <div class="row">
                                    <label for="exampleInputEmail1">@i.ReceiverName</label>
                                </div> }
                        }
                        
                        <pager source="@Model" />
                    </div>

            </div>
        </div>
    </div>
</div>
    </div>
