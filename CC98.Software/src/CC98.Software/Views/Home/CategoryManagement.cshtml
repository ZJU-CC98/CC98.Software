@model Category []

@{
}<form><input type="text" name="Name" /> <button type="submit" asp-action="NewCategory" asp-controller="home">新建分类</button>
     <table>
         <thead>
             <tr>
                 <th>分类</th>
                 <th>操作</th>
             </tr>
         </thead>
         <tbody>
        
             @foreach (var i in Model)
             {
                 @i.Name;

             <tr>
                 <td><button type="submit"  asp-controller="home" asp-action="Delete" asp-route-id="@i.Id">删除</button></td>
                 <td><input type="text" name="Name" /></td>
                 <td><button type="submit" asp-action="New2category" asp-controller="home" asp-route-id="@i.Id">新建分类</button></td>
             </tr>
                 if (i.Parent == null)
                 {
                     foreach (var p in i.Children)
                     {
                         <tr>
                             <td><ul>@p.Name </ul></td>
                             <td><button type="submit" asp-action="Delete" asp-controller="home" asp-route-id="@p.Id">删除</button></td>
                         </tr>
                     }
                 }
             }
        
             </tbody>
         </table>
    </form>
     

