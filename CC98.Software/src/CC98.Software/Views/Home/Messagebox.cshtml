@model Feedback[]



<div class="row">

    <div class="col-md-10">

        <h3>Send Message</h3>

    </div>

</div>



<div class="row">

    <div class="col-md-10">

        <form asp-action="SendMessage" asp-controller="home">

            收件人 <br />

            <input name="Receivername" type="text" /><br />

            标题<br />

            <input name="Title" type="text" /><br />

            内容<br />

            <input name="Content" type="text" /><br />

            <button type="submit" class="btn btn-default">Send</button>

        </form>

    </div>

</div>
        <div id="messageslist" class="col-md-6">
            <div id="sendMessage" class="row">
                <div class="col-md-10">
                    <center><h3>发件箱</h3></center>
                    <div class="row">
                        <div class="col-md-9">
                            <form>
                                <div class="row">
                                    <h4>标题</h4>
                                    @foreach (Feedback i in Model)
            {
                if (i.SenderName == User.Identity.Name)
                {
                                            <div class="row">
                                                <label style="overflow:hidden;text-overflow:ellipsis" for="exampleInputEmail1">@i.Title</label>
                                            </div> }
            }
                                </div>

                            </form>
                        </div>

                        <div class="col-md-3">
                            <form>
                                <div class="row">
                                    <h4>收件人</h4>
                                    @foreach (Feedback i in Model)
            {
                if (i.SenderName == User.Identity.Name)
                {
                                            <div class="row">
                                                <label for="exampleInputEmail1">@i.ReceiverName</label>
                                            </div> }
            }
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div id="receiveMessage" class="row">
                <div class="col-md-10">
                    <center><h3>收件箱</h3></center>
                    <div class="row">
                        <div class="col-md-9">
                            <form asp-action="Messagedetail" asp-controller="home">
                                <div class="row">
                                    <h4>标题</h4>
                                    @foreach (Feedback i in Model)
            {
                if (i.ReceiverName == User.Identity.Name)
                {
                                            <div class="row">
                                                <label style="overflow:hidden;text-overflow:ellipsis" for="exampleInputEmail1"><a asp-action="Messagedetail" asp-controller="home" asp-route-id="@i.Id">@i.Title</a></label>
                                            </div>
                                        }
                                    }
                                </div>
                            </form>

                        </div>
                        <div class="col-md-3">
                            <form>
                                <div class="row">
                                    <h4>发件人</h4>
                                    @foreach (Feedback i in Model)
            {
                if (i.ReceiverName == User.Identity.Name)
                {
                                            <div class="row">
                                                <label for="exampleInputEmail1">@i.SenderName </label>
                                            </div>
                                        }
                                    }
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


