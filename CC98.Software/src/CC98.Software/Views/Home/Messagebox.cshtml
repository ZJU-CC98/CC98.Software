@model Feedback[]

<div class="row">
    <div class="col-md-10">
        <h3>Send Message</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-10">
        <form asp-action="SendMessage" asp-controller="home">
            收件人 <br />
            <input name="Receivername" type="text"/><br/>
            标题<br/>
            <input name="Title" type="text"/><br/>
            内容<br/>
            <input name="Content" type="text"/><br/>
            <button type="submit" class="btn btn-default">Send</button>
        </form>
    </div>
</div>
<div id="messageslist">
    <div id="sendMessage">
        <form>
            <table>
                <tr>
                    <td>标题</td>
                    <td>收件人</td>
                </tr>
                @foreach (Feedback i in Model)
            {
                if (i.SenderName == User.Identity.Name)
                {
                        <tr>
                            <td>@i.Title </td>
                            <td>@i.ReceiverName </td>
                        </tr> }


            }
            </table>
        </form>
    </div>
    <div id="receiveMessage">
       <form asp-action="Messagedetail" asp-controller="home">
        <table>
            <tr>
                <td>标题</td>
                <td>发件人</td>
            </tr>
            @foreach (Feedback i in Model)
            {
                if (i.ReceiverName == User.Identity.Name)
                {
                    <tr>
                        <td><a asp-action="Messagedetail" asp-controller="home" asp-route-id="@i.Id">@i.Title</a> </td>
                        <td>@i.SenderName </td>
                    </tr>
                }
            }
        </table></form>
    </div>
</div>
